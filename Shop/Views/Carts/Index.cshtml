@model IEnumerable<Shop.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>No. Items</th>
            <th>Monto total</th>
        </tr>
    </thead>
    <tbody>
@foreach (Cart item in Model)
{
        <tr>
            <td>
                @item.Cliente.Name @item.Cliente.LastName
            </td>
            <td>
                @item.Items.Count()
            </td>
            <td>
                <button class="btn btn-success">
                    <a asp-controller="Ordens" asp-action="CreateOrder" asp-route-cartId="@item.Id">Pagar</a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
