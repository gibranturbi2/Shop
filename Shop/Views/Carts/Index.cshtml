@model IEnumerable<Shop.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>No. Items</th>
            <th>Monto total</th>
        </tr>
    </thead>
    <tbody>
@foreach (Cart item in Model)
{
        <tr>
            <td>
                @item.Cliente.Name @item.Cliente.LastName
            </td>
            <td>
                @item.Items.Count()
            </td>
            <td>
                <a asp-controller="Ordens" asp-action="CreateOrder" asp-route-cartId="@item.Id">Pagar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
